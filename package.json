{
  "name": "mapedia-api",
  "version": "1.0.0",
  "description": "GraphQl API for Mapedia.org",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist/",
    "copy-files": "copyfiles -u 1 src/**/*.mjml dist/",
    "build": "yarn codegen && yarn clean && yarn copy-files && tsc",
    "dist": "sh ./scripts/dist.sh",
    "codegen": "graphql-codegen",
    "start": "node ./dist/index.js",
    "dev": "tsc-watch --onCompilationStarted \"yarn copy-files\" --onSuccess \"yarn start\" --onFailure \"echo Beep! Compilation Failed\" --compiler typescript/bin/tsc",
    "watch:emails": "nodemon --watch 'src/**/*' -e mjml --exec 'yarn copy-files'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "docker:build": "docker build -t scimaporg/mapedia-api:latest .",
    "docker:run": "docker run -it -p 8000:8000 --env-file .env scimaporg/mapedia-api:latest",
    "docker:push": "docker push scimaporg/mapedia-api:latest",
    "deploy": "yarn docker:build && yarn docker:push && yarn dist && echo 'Just upload the zip file now'",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "migration:run": "yarn typeorm migration:run",
    "migration:revert": "yarn typeorm migration:revert",
    "migration:show": "yarn typeorm migration:show"
  },
  "engines": {
    "node": ">=16"
  },
  "author": "",
  "license": "GPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mapedia-org/mapedia_api.git"
  },
  "dependencies": {
    "@freighthub/typed-env": "^1.3.4",
    "@graphql-tools/graphql-file-loader": "^7.3.3",
    "@graphql-tools/load": "^7.4.1",
    "@graphql-tools/schema": "^8.3.1",
    "apify": "^2.2.0",
    "apollo-server-core": "^3.5.0",
    "apollo-server-koa": "^3.5.0",
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.0.0-rc.10",
    "cross-fetch": "^3.1.5",
    "crypto-js": "^4.1.1",
    "cypher-query-builder": "^6.0.4",
    "discord.js": "^12.3.1",
    "dotenv": "^10.0.0",
    "flat": "^5.0.2",
    "google-auth-library": "^7.10.4",
    "googleapis": "^92.0.0",
    "iso8601-duration": "^1.3.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.4",
    "lodash": "^4.17.21",
    "mjml": "^4.12.0",
    "monk": "^7.3.4",
    "neo4j-driver": "4.4.1",
    "nodemailer": "^6.7.2",
    "pg": "^8.7.3",
    "puppeteer": "^13.0.0",
    "ramda": "^0.27.0",
    "reflect-metadata": "^0.1.13",
    "shortid": "^2.2.16",
    "string-similarity": "^4.0.4",
    "typeorm": "^0.2.44",
    "typescript": "^4.5.4",
    "wikijs": "^6.3.2",
    "winston": "^3.3.3",
    "winston-cloudwatch": "2.3.2",
    "winston-discord-transport": "^1.3.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.3.0",
    "@graphql-codegen/typescript": "2.4.1",
    "@graphql-codegen/typescript-resolvers": "2.4.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/crypto-js": "^4.0.2",
    "@types/flat": "^5.0.2",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/koa": "^2.13.4",
    "@types/lodash": "^4.14.178",
    "@types/mjml": "^4.7.0",
    "@types/node": "^14.11.8",
    "@types/nodemailer": "^6.4.4",
    "@types/puppeteer": "^5.4.4",
    "@types/ramda": "^0.27.60",
    "@types/shortid": "^0.0.29",
    "@types/string-similarity": "^4.0.0",
    "copyfiles": "^2.4.1",
    "graphql": "^16.1.0",
    "nodemon": "^2.0.16",
    "rimraf": "^3.0.2",
    "ts-node": "^10.6.0",
    "tsc-watch": "^4.5.0"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 120
  }
}
